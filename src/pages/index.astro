---
import BlogLatest from '../components/BlogLatest.astro'
import FooterAnimation from '../components/footer-animation.astro'
import LatestTracks from '../components/LatestTracks.astro'
import StarwarsCanvas from '../components/starwars-canvas.astro'
import Wall from '../components/Wall.astro'
import Normal from '../layouts/Normal.astro'
---

<Normal>
	<div class="Doc">
		<p>HEJ I'm Oskar Rough Mosumgaard, this is my website.</p>
		<!-- <p>Design, music and web technology.  I enjoy helping people build things, mostly on the internet. Tools that last, software you can change.</p> -->
		<!-- <p>Here you'll find <a href="/music">my radio and mixtapes</a>, ideas I like, <a href="/projects">projects</a> I am or was part of, and some more or less random <a href="/links">links</a>.</p> -->
	</div>
</Normal>

<img loading="lazy" src="/assets/eyes.jpg" alt="" class="eyeswideshut" />

<div class="blog">
	<h2 class="upsidedown"><a href="/blog">Log</a></h2>
	<BlogLatest max={5} />
	<StarwarsCanvas />
	<div class="tracks">
		<p>Latest tracks on <a href="https://radio4000.com/oskar">Radio Oskar</a></p>
		<LatestTracks />
	</div>
</div>

<Wall />

<FooterAnimation />

<style>
	.upsidedown {
		margin-top: -2rem;
		display: inline-block;
		transform-origin: center;
		transform: rotate(180deg);
	}
	.eyeswideshut {
		position: absolute;
		top: 0;
		right: 0;
	}
	.blog {
		position: relative;
		background: var(--white) url('/assets/pixelpattern.gif') repeat;
		padding: 2rem 1rem 0.5rem;

		h2 a,
		article a {
			color: var(--black);
		}

		article {
			position: relative;
			z-index: 3;
		}

		h3 {
			display: inline-flex;
			background: var(--white);
		}

		&::before,
		&::after {
			content: "";
			position: absolute;
			pointer-events: none;
			top: 0;
		}

		&::before {
			background: linear-gradient(to bottom, #d3d3e9a8, #d3d3e9a8 50%, transparent 50%);
			width: 33%;
			height: 33%;
			left: 33%;
			z-index: 3;
		}

		&::after {
			background: linear-gradient(to right, black, transparent);
			left: 50%;
			width: 33%;
			height: 100%;
			z-index: 4;
		}
	}

	.blog :global(starwars-canvas) {
		pointer-events: none;
		z-index: 1;
		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		height: 100%;
		width: 50%;
		height: auto;

		canvas {
			width: 100%;
			height: 100%;
		}
	}

	.tracks {
		position: absolute;
		right: 0.5rem;
		bottom: 0;
		z-index: 3;
		color: white;
		text-align: right;
		font-size: var(--step--2);

		ul {
			list-style: none;
		}
		a {
			color: white;
			opacity: 0.9;
			&:hover {
				background: var(--accent);
				color: black;
				opacity: 1;
			}
		}
	}
</style>
