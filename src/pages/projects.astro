	<ul class="list">
		{
		projects.map(async (post) => {
		const { Content, headings } = await post.render();
		return (<li>
			<h3>
				{post.data.url ?
				<a href={post.data.url}>{post.data.title} </a>
				: post.data.title}
			</h3>
